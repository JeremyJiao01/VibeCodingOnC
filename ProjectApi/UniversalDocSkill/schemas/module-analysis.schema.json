{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Module Analysis Result",
  "description": "Output schema for ModuleAnalyzer sub-agent. One file per module: analysis/m{NNN}.json",
  "type": "object",
  "required": ["moduleId", "moduleName", "responsibility", "coreLogic", "keyAlgorithms", "dataStructures", "dependencies", "internalFunctions", "complexity"],
  "properties": {
    "moduleId": {
      "type": "string",
      "pattern": "^m\\d{3}$"
    },
    "moduleName": {
      "type": "string",
      "minLength": 2
    },
    "responsibility": {
      "type": "string",
      "minLength": 50,
      "description": "High-level description of what this module does and why it exists"
    },
    "coreLogic": {
      "type": "string",
      "minLength": 100,
      "description": "Detailed explanation of the module's core logic and processing flow"
    },
    "keyAlgorithms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "location"],
        "properties": {
          "name": { "type": "string" },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "location": {
            "type": "string",
            "description": "Relative file path with line range, e.g. src/auth/jwt.ts:45-80"
          },
          "timeComplexity": { "type": "string" },
          "spaceComplexity": { "type": "string" }
        }
      }
    },
    "dataStructures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "description"],
        "properties": {
          "name": { "type": "string" },
          "type": {
            "type": "string",
            "description": "e.g. class, interface, struct, enum, type alias, map, tree"
          },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "description": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["target", "type"],
        "properties": {
          "target": {
            "type": "string",
            "description": "Module ID or external package name"
          },
          "type": {
            "type": "string",
            "enum": ["import", "runtime", "optional", "dev"]
          },
          "description": { "type": "string" }
        }
      }
    },
    "internalFunctions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "visibility": {
            "type": "string",
            "enum": ["private", "protected", "internal", "file-scoped"]
          }
        }
      }
    },
    "complexity": {
      "type": "object",
      "required": ["totalLines", "sourceFiles"],
      "properties": {
        "totalLines": { "type": "integer", "minimum": 0 },
        "sourceFiles": { "type": "integer", "minimum": 1 },
        "estimatedCyclomaticComplexity": {
          "type": "string",
          "enum": ["low", "medium", "high", "very_high"]
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "Additional observations, warnings, or context"
    }
  },
  "additionalProperties": false
}
